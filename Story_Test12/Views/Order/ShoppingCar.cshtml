<script>
 


$(function(){ 
	var t = $("#num"); 
    $("#add").click(function () {
      
		t.val(parseInt(t.val())+1)
		setTotal();
	})
	$("#min").click(function(){
		if(t.val()>1){
		t.val(parseInt(t.val())-1);
		}
		else{
		alert("至少購買一件哦！");
		}
		setTotal();
	})
});
</script>