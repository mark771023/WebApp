
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form action="@Url.Action("Index")" method="post" class="form-horizontal">

    <div class="form-group">
        <label for="id" class="control-label col-md-3">帳號:</label>
        <div class="col-md-9">
            <input id="id" name="id" type="text" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <label for="id" class="control-label col-md-3">密碼:</label>
        <div class="col-md-9">
            <input id="pwd" name="pwd" type="text" class="form-control" required />
        </div>
    </div>

    <div class="col-md-9 col-md-offset-3">
        <input id="Reset1" type="reset" value="重填" class="btn btn-default" />
        <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
    </div>
</form>

<h3 class="text-danger">@ViewBag.Msg</h3>
