
@{
    ViewBag.Title = "管理員登入";
}
    <div class="container" style="height:100px;"></div>
<h2>管理員登入</h2>

<form action="@Url.Action("Index")" method="post" class="form-horizontal">

    <div class="form-group">
        <label for="AdminAccount" class="control-label col-md-3">帳號</label>
        <div class="col-md-9">
            <input id="AdminAccount" name="AdminAccount" type="text" required class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="AdminPwd" class="control-label col-md-3">密碼</label>
        <div class="col-md-9">
            <input id="AdminPwd" name="AdminPwd" type="password" required class="form-control" />
        </div>
    </div>
    <div class="col-md-9 col-md-offset-3">
        <input id="Reset1" type="reset" value="重填" class="btn btn-default" />
        <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
    </div>
</form>
<h3 class="text-danger">@ViewBag.Message</h3>



