    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
    </style>
</head>
<body>
    <header>
        <section class="bg-light fixed-top">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-md"></div>

                    @*Logo放置的位子*@
                    <a class="col-md " href="~/Home/Index">
                        <div class="row">
                            <img src="~/Images/Logo0.jpg" class="align-self-center col-md img-fluid" style="height:60px;" />
                        </div>
                    </a>

                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item col-md">
                            <form class="form-inline my-2 my-lg-0" action="https://www.google.com.tw/search">

                                @*收尋的按鈕和搜尋框*@
                                <div class="form-group">
                                    <input id="email" name="q" type="search" class="form-control" placeholder="Search" required aria-label="Search" />
                                </div>
                                <button class="btn btn-outline-success my-2 my-sm-0 float-right" type="submit">
                                    <svg class="bi bi-search" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                    </svg>
                                </button>

                                @*//會員登入的按鈕*@
                                <div class="btn" data-toggle="modal" data-target="#myModal">
                                    <a>
                                        <svg class="bi bi-person" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                        </svg>
                                    </a>
                                </div>

                                @*聯絡我們的按鈕*@
                                <div class="btn">
                                    <a href="~/Member/Create">
                                        <svg class="bi bi-chat" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                                        </svg>
                                    </a>
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="navbar navbar-expand-lg navbar-light" style="background-color:#4973ae;">

                @*網頁縮放後的漢堡圖案按鈕設定*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @*功能列*@
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/Home/Index">
                                <strong>
                                    首頁
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/Commodity/Index">
                                <strong>
                                    所有寶物
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/Home/Index">
                                <strong>
                                    聯絡我們
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn text-white nav-link" href="~/ManagementSystem/Index">
                                <strong>
                                    總管理系統
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/ Order/OrderList">
                                <strong>
                                    訂單管理
                                </strong>
                            </a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link text-white" href="~/Industry/Index">
                                    <strong>
                                        廠商管理
                                    </strong>
                                </a>
                            </li>*@
                        <li class="nav-item">
                            <a class="btn text-white nav-link" href="#">
                                <strong>
                                    @Session["WelCome"]
                                </strong>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Logout","AdministratorLogin")">
                                <strong>
                                    登出
                                </strong>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
        <!--這裡是Modal點擊會員圖像彈出畫面-->
        @*<div class="modal fade" tabindex="-1" id="myModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">請登入</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="@Url.Action("Index","LoginMember")" method="post" class="form-horizontal">
                                <div class="form-group">
                                    <label for="Account" class="control-label">帳號</label>
                                    <div>
                                        <input id="Account" name="Account" type="text" required class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Password" class="control-label">密碼:</label>
                                    <div>
                                        <input id="Password" name="Password" type="password" required class="form-control" />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div href="~/Member/Create">
                                        @Html.ActionLink("會員註冊", "Create", "Member", null, new { @class = "btn btn-success" })
                                    </div>
                                    <input id="Submit1" type="submit" value="登入" class="btn btn-success" />
                                    <input id="Reset1" type="reset" value="重填" class="btn btn-default" />
                                </div>
                                <div>
                                    @Html.ActionLink("管理員登入", "Index", "LoginAdministrator", null, new { @class = "btn btn-success" })
                                </div>
                                <h3 class="text-danger">@ViewBag.Message</h3>
                            </form>
                        </div>
                    </div>
                </div>
            </div>*@
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="container-fluid mt-5 bg-dark footer-content">
            <p class="text-white text-center mb-0">&copy; @DateTime.Now.Year - 行動商務第二組</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    @*<script src="~/Scripts/MyJS.js"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>
