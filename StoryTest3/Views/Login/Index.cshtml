
@{
    ViewBag.Title = "會員登入";
}

<h2>會員登入</h2>

<form action="@Url.Action("Index")" method="post" class="form-horizontal">

    <div class="form-group">
        <label for="Account" class="control-label col-md-3">帳號</label>
        <div class="col-md-9">
            <input id="Account" name="Account" type="text" required class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="Password" class="control-label col-md-3">密碼:</label>
        <div class="col-md-9">
            <input id="Password" name="Password" type="password" required class="form-control" />
        </div>
    </div>
    <div class="col-md-9 col-md-offset-3">
        <input id="Reset1" type="reset" value="重填" class="btn btn-default" />
        <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
    </div>
</form>
<h3 class="text-danger">@ViewBag.Message</h3>

<div>
    @Html.ActionLink("返回會員列表", "Index", "Member")
</div>